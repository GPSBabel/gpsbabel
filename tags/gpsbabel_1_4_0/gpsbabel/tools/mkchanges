# cvsps -u
cvsps $* |  awk '
/^Date:/ { 
	logt = "";
	gsub("/", "-");
	split($0, dte, " ");
	
	printf "\n<tr><td class=\"date\">%s</td>", dte[2];
	}
/^Log:/ { gsub("^Log:", ""); inlog = 1 }
/^Members:/ {printf "<td>%s</td></tr>", logt ; inlog = 0; }
{ if (inlog > 0) { logt = logt $0 ;}  }
' | sort -rn | sed "s#<td#\\
  <td#g" | sed "s#<\/tr>#\\
<\/tr>#g"
