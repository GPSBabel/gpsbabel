
case `uname -r` in
  9.0) ;; # 10.3/
  9.1) ;; # 10.4/Tiger
  *)   XFLAGS="-mmacosx-version-min=10.6" ;; # 10.5/Leopard
esac 
SRC=.
CFLAGS="$XFLAGS  -O " \
  LDFLAGS="$XFLAGS "   ${SRC}/configure 

